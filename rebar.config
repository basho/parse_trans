{brt_protect, true}.

{erl_opts, [
    warn_bif_clash,
    warn_export_all,
    warn_export_vars,
    warn_obsolete_guard,
    warn_unused_import
]}.

{profiles, [
    {check, [
        {dialyzer, [
            {warnings, [
                no_opaque,
                race_conditions,
                unknown
            ]}
        ]},
        {erl_opts, [
            debug_info,
            warnings_as_errors,
            {d, 'BASHO_CHECK'}
        ]},
        {xref_checks, [
            deprecated_function_calls,
            deprecated_functions,
            locals_not_used,
            undefined_function_calls,
            undefined_functions
        ]}
    ]},
    {docs, [
        {deps, [
            {edown,
                {git, "https://github.com/basho/edown.git",
                {branch, "feature/riak-2903/rebar3"} }}
        ]},
        {edoc_opts, [
            {app_default,   "http://www.erlang.org/doc/man"},
            {doclet,        edown_doclet},
            {top_level_readme,
                {"./README.md", "http://github.com/basho/parse_trans"}}
        ]}
    ]},
    {prod, [
        {erl_opts, [
            warnings_as_errors,
            {d, 'BASHO_PROD'}
        ]}
    ]},
    {example, [
        {erl_opts, [
            debug_info,
            nowarn_export_all,
            nowarn_unused_function,
            nowarn_unused_record,
            nowarn_unused_vars,
            warnings_as_errors
        ]},
        {extra_src_dirs, ["examples"]}
    ]},
    {test, [
        {cover_enabled, true},
        {erl_opts, [
            debug_info,
            nowarn_deprecated_function,
            nowarn_export_all,
            nowarn_unused_function,
            warnings_as_errors,
            {d, 'BASHO_TEST'}
        ]},
        {eunit_opts, [
            verbose
        ]}
    ]},
    {validate, [
        {erl_opts, [
            strong_validation,
            no_auto_import,
            warn_bif_clash,
            warn_deprecated_function,
            warn_deprecated_type,
            warn_export_all,
            warn_export_vars,
            warn_missing_spec,
            warn_missing_spec_all,
            warn_obsolete_guard,
            warn_shadow_vars,
            warn_untyped_record,
            warn_unused_function,
            warn_unused_import,
            warn_unused_record,
            warn_unused_vars,
            {d, 'BASHO_VALIDATE'}
        ]}
    ]}
]}.

{brt_upstream, [
    {upstream, {git, "https://github.com/uwiger/parse_trans.git"}},
    {mirror, upstream, master}
]}.

{plugins, [
    {basho_rebar_tools,
        {git, "https://github.com/basho/basho_rebar_tools.git",
        {branch, "master"} }}
]}.

